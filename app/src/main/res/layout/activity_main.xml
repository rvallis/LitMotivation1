<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.example.android.litmotivation.MainActivity">

    <TextView
        android:id="@+id/getbetter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="left"
        android:textSize="39sp"
        android:textColor="@android:color/black"
        android:text="feel better"
        />

    <TextView
        android:id="@+id/everyday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="right"
        android:textSize="39sp"
        android:text="do better"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <TextView
        android:id="@+id/triggers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/litmotivation"
        android:textSize="25sp"
        android:text="utilize your unique triggers to put the best you on call, 24/7"
        />

    <TextView
        android:id="@+id/litmotivation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lit Motivation"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="bottom"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/discover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="Discover what makes you"
        android:layout_below="@+id/everyday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="23sp"
        android:text="Find your secret to accessing your ideal mental state"
        android:layout_above="@+id/triggers"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="22dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="track what matters\nopen your log"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"
        android:textAllCaps="true"
        android:textSize="25dp"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/doandfeel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="right"
        android:paddingRight="20dp"
        android:text="do and feel great"
        android:textAllCaps="true"
        android:textColor="@android:color/black"
        android:layout_below="@+id/discover"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/ss4"
        android:alpha="0.4"
        />

</RelativeLayout>
